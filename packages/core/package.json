{
  "name": "@tidbcloud/tisqleditor",
  "version": "0.0.4",
  "description": "editor instance and editor cache",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*.js",
    "dist/*.ts",
    "package.json",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "tsc:watch": "tsc --watch",
    "rollup:watch": "rollup -c --watch",
    "dev": "concurrently --kill-others \"pnpm tsc:watch\" \"pnpm rollup:watch\"",
    "build": "tsc && rollup -c"
  },
  "keywords": [
    "tidbcloud",
    "sql",
    "editor",
    "codemirror"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@codemirror/lang-sql": "^6.6.4",
    "@codemirror/state": "^6.4.1",
    "@codemirror/view": "^6.26.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "rollup": "^4.18.0",
    "tslib": "^2.6.3",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "@codemirror/lang-sql": "^6.6.4",
    "@codemirror/state": "^6.4.1",
    "@codemirror/view": "^6.26.3"
  },
  "dependencies": {
    "@tidbcloud/codemirror-extension-basic-setup": "workspace:^",
    "@tidbcloud/codemirror-extension-cur-sql": "workspace:^",
    "@tidbcloud/codemirror-extension-sql-parser": "workspace:^"
  }
}
